<% if micropost.like?(current_user) %>
  <%= form_with(model: micropost, method: :delete, remote:true) do |f| %>
    <%= button_tag(class: "btn btn-default btn-xs") do %>
      <%= content_tag :span, micropost.likes.count, class: "fa fa-heart red" %>
    <% end %>
  <% end %>
<% else %>
  <%= form_with(model: micropost, url: likes_path, remote: true) do |f| %>
    <div><%= hidden_field_tag :micropost_id, micropost.id %></div>
    <%= button_tag(class: "btn btn-default btn-xs") do %>
      <%= content_tag :span, micropost.likes.count, class: "fa fa-heart-o" %>
    <% end %>
  <% end %>
<% end %>
